CREATE OR REPLACE FUNCTION fn_count_employees_by_town(town_name VARCHAR(20))
RETURNS INT
AS
$$
BEGIN
    RETURN (
        SELECT COUNT(*)
        FROM employees e
        JOIN addresses a ON e.address_id = a.address_id
        JOIN towns t ON a.town_id = t.town_id
        WHERE t.name = town_name
    );
END;
$$
LANGUAGE plpgsql;
